{
  "title": "Spotify",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "hostEquals": "open.spotify.com" } }
      ],

      "matches": [
        "*://open.spotify.com/*"
      ],

      "js": [
        "common.js",
        "source/common.js",
        "source/spotify/spotify.js"
      ]
    }
  ],

  "services": [
    "configuration",

    "source/activity"
  ],
  "web_accessible_resources": [
    "source/spotify/shim/shim.js"
  ],

  "webpack": {
    "modules": [
      "shim"
    ]
  }
}
