{
  "title": "Spotify",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "hostEquals": "open.spotify.com" } }
      ],

      "matches": [
        "*://open.spotify.com/*"
      ],

      "js": [
        "Common.js",
        "Modules/Common.js",
        "Modules/neon-extension-source-spotify/Main.js"
      ]
    }
  ],

  "services": [
    "configuration",

    "source/activity"
  ],
  "web_accessible_resources": [
    "Modules/neon-extension-source-spotify/Shim.js"
  ],

  "webpack": {
    "modules": {
      "Shim": { "entry": true }
    }
  }
}
